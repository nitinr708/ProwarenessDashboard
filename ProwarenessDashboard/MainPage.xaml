<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  x:Class="ProwarenessDashboard.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="500" Width="1600" 
    d:DesignHeight="500" d:DesignWidth="1600" Loaded="UserControl_Loaded">

    
    
    

        <!-- Style for the buttons -->
        <UserControl.Resources>
            <Style x:Name="ButtonStyle" TargetType="Button">
                <Setter Property="Height" Value="50" />
                <Setter Property="Width" Value="100" />
                <Setter Property="Margin" Value="5" />
            </Style>
        </UserControl.Resources>

        <Grid x:Name="LayoutRoot" Background="LightBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="239*" />
                <ColumnDefinition Width="577*" />
                <ColumnDefinition Width="784*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- StackPanel to hold the Webcam Control Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="1" Margin="0,0,247,0" Width="330">
                <Button Style="{StaticResource ButtonStyle}" x:Name="StartButton" Click="StartButton_Click" Content="Start Camera" />
                <Button Style="{StaticResource ButtonStyle}" x:Name="StopButton" Click="StopButton_Click" Content="Stop Camera" />
                <Button Style="{StaticResource ButtonStyle}" x:Name="CaptureButton" Click="CaptureButton_Click" Content="Capture Image" />
            </StackPanel>
            
            <!--StackPanel to hold the list of Teams-->
            <StackPanel Name="TeamsListStackPanel" Grid.RowSpan="2" Orientation="Vertical" HorizontalAlignment="Left" Height="Auto" Width="221" Margin="6">
                <!--Button to add a Team and it's Statistics-->
            

        </StackPanel>
            <!-- The Fill property will be set to the webCam VideoBrush -->
            <Rectangle x:Name="webcamDisplay"  Grid.Row="1" Grid.Column="1" Margin="5,10,11,0" Grid.ColumnSpan="2" />
        <!--<Grid Grid.Row="1" x:Name="FrameContainer" Background="Blue">
        </Grid>-->

        <!-- This Fill property will be set to the capturedImage ImageBrush  -->
            <Rectangle x:Name="capturedDisplay" Grid.Row="1" Grid.Column="2"  Margin="9,10,275,0" Width="500" />

        </Grid>
  

</UserControl>
    
